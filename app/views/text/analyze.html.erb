<h1>Résultat de l'analyse</h1>
<div class="row">
<div id="output" class="large-10 large-offset-1 columns">
<p>
<% @output.split(/\n/).each do |line| %>
<%=raw line%>
</p>
<p>
<%end%>
</p>
</div>
</div>

<hr/>

<h1>Analyser un nouveau texte</h1>
<%= form_tag({controller: 'text', action: 'analyze'}, method: 'post') do %>
  <div class="row">
    <div class="large-12 columns">
      <textarea name="text"></textarea>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <label for="threshold">Seuil de détection des répétitions</label><input type="text" name="threshold" value="100">
    </div>
  </div>
  <div class="row">
    <input type="submit" class="button large-12 columns" value="Analyser">
  </div>
<% end %>
